package interfaceGrafica;

import java.awt.*;
import javax.swing.*;

public class Status extends JPanel {
	private static final long serialVersionUID = 1L;
	
	protected JLabel pontuacao;
	protected JLabel deQuemEhVez;
	
	Status() {
		configurarStatus();
		carregarComponentes();
	}
	
	public void configurarStatus() {
		GridLayout layout = new GridLayout(2,1);
		setBackground(Color.WHITE);
		setLayout(layout);		
	}
	
	public void carregarComponentes() {
		pontuacao = new JLabel("Resultado lançamento:");
		add(pontuacao);
		
		deQuemEhVez = new JLabel("De quem é a vez:");
		add(deQuemEhVez);
	}

	public void alterarConfiguracao(int pontuacao, String nomeJogadorDaVez) {
		if (pontuacao == 0) {
			this.pontuacao.setText("Resultado lançamento: sem partida");
			this.deQuemEhVez.setText("De quem é a vez: sem partida");
		} else {
			this.pontuacao.setText("Resultado lançamento: " + pontuacao);
			this.deQuemEhVez.setText("De quem é a vez: " + nomeJogadorDaVez);
		}
	}
}